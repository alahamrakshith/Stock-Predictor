    <main class='parent'>
        <div id='login-credentials' class='container'>
            <a href="/login" class="btn-view">Login</a>
            <a href="/signup" class="btn-view">Sign up</a>

            <form action="/login" method="POST">
                <input type='text' class='block' id='username' name='username' required placeholder="Enter Email">
                <input type='password' class='block' id='password' name='password' required
                    placeholder="Enter password">
                <a href="#" id="forgot">Forgot Password?</a>

                <button type="submit" name='login' class=' btn-view'>Login</button>
            </form>
        </div>
        <div id='first-circle' class='half-circle'></div>
        <div id='second-circle' class='half-circle'></div>
        <div id='third-circle' class='half-circle'></div>
    </main>